<% if flash.has?(:message) %>
  <%=flash[:message]%>
<%end%>

<h2>Welcome, <%=@user.username%></h2>

<h4>Here are your workouts!</h4>
  <% @user.workouts.each do |workout| %>
    <a href="/workouts/<%=workout.slug%>"><%=workout.name%></a>
    <br>
    <a href="/workouts/<%=workout.slug%>/edit">Edit Workout!</a>
    <br><br>
  <%end%>
  <br>

<h4>Here are all your exercises!</h4>
  <% @user.exercises.each do |cise| %>
    <%= cise.name %><br>
  <%end%>
