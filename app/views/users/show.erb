

<h2>Hello, <%= current_user.username %></h2>

<h3>Create a new workout <a href="/workouts/new">here!</a></h3>
<h3>Create a new exercise <a href="/exercises/new">here!</a></h3>
<h3>View categories <a href="/categories">here!</a></h3>
<h3>View all workouts <a href="/workouts">here!</a></h3>
<h3>View all exercises <a href="/exercises">here!</a></h3>

<h4>Here are your workouts!</h4>
  <% current_user.workouts.each do |workout| %>
  <ul>
    <li><a href="/workouts/<%= workout.slug %>"><%= workout.name %></a></li>
    <li><a href="/workouts/<%= workout.slug %>/edit">Edit Workout!</a></li>
    <li>Category: <%= workout.category %></li>
    <form action="/users/workouts/<%= workout.slug %>/remove" method="post">
      <input type="hidden" name="<%= workout.slug %>">
      <input type="submit" value="Remove Workout">
    </form>
    <br>
  <br>
  <% end %>
  </ul>
<h4>Here are all your exercises!</h4>
  <% current_user.exercises.each do |cise| %>
    <a href="/exercises/<%= cise.slug %>"><%= cise.name %></a><br>
  <% end %>
